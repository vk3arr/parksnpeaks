<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.parksnpeaks.parksnpeaks"
    android:configChanges="orientation|screenSize"
    android:versionCode="3"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pnp_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.parksnpeaks.parksnpeaks.MainActivity$SettingsActivity" ></activity>
        <activity android:name="org.parksnpeaks.parksnpeaks.MainActivity$SpotActivity" ></activity>
    </application>

</manifest>
