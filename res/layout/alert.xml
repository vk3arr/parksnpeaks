<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_alert"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView 
    		android:layout_width="wrap_content"
    		android:id="@+id/alert_date"
    		android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:layout_alignParentTop="true"
    		android:paddingRight="8dp"
    		android:textAlignment="textStart"
    		android:typeface="monospace"
    		android:textSize="12sp"
    		android:text="00:00" />
    
        <TextView 
    		android:layout_width="wrap_content"
    		android:id="@+id/alert_time"
    		android:layout_height="match_parent"
    		android:layout_alignParentLeft="true"
    		android:layout_below="@+id/alert_date"
    		android:paddingRight="10dp"
    		android:textAlignment="textStart"
    		android:typeface="monospace"
    		android:textSize="12sp"
    		android:text="00:00" />
	    
    
	    <TextView 
	        android:id="@+id/alert_call"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:textSize="20sp"
    		android:layout_toRightOf="@+id/alert_time"
    		android:layout_alignParentTop="true"
    		android:textStyle="bold"
    		android:text="VK3FAAA" />
	    
	    <TextView android:layout_width="match_parent"
    		android:id="@+id/alert_location"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/alert_time"
    		android:layout_below="@+id/alert_call"
    		
    		android:textSize="10sp"
    		android:textStyle="italic"
    		android:typeface="serif"
    		android:text="K: Cathedral Ranges NP W: VKFF-414" />	    
	    
	    <TextView android:layout_width="match_parent"
    		android:id="@+id/alert_comment"
    		android:layout_height="wrap_content"
	   		android:layout_alignParentLeft="true"
	   		android:layout_below="@+id/alert_location"
    		android:layout_alignParentBottom="true"
			android:paddingTop="8dp"
			android:paddingBottom="4dp"
    		android:textSize="11sp"
    		android:textStyle="normal"
    		android:typeface="serif"
    		android:text="K: Cathedral Ranges NP W: VKFF-414" />	
	    
	    <TextView 
	        android:id="@+id/alert_freq"
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:textAlignment="textEnd"
    		android:typeface="monospace"
    		android:layout_alignParentRight="true"
    		android:layout_alignParentTop="true"
    		android:textSize="12sp"
    		android:textStyle="bold"
    		android:textAllCaps="true"
    		android:text="24.090" />
	    <TextView 
	        android:id="@+id/alert_mode"
    		android:layout_width="wrap_content"
    		android:layout_height="match_parent"
    		android:textAlignment="textEnd"
    		android:typeface="serif"
    		android:layout_alignParentRight="true"
    		android:layout_below="@+id/alert_freq"
    		android:textSize="11sp"
    		android:textStyle="bold"
    		android:textAllCaps="true"
    		android:text="SSB" />
   
</RelativeLayout>